  width: 220rpx;
  height: 120rpx;
  align-items: center;
  justify-content: center;
  background: linear-gradient(-135deg,#ffffff 10%, #d81e06 5%, #ffffff 15%);
  box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,0.05);
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.MultiFunctional-item-2{
  display: flex;
  width: 220rpx;
  height: 120rpx;
  align-items: center;
  justify-content: center;
  background: linear-gradient(-135deg,#ffffff 10%, #f4ea2a 5%, #ffffff 15%);
  box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,0.05);
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.MultiFunctional-item-3{
  display: flex;
  width: 220rpx;
  height: 120rpx;
  align-items: center;
  justify-content: center;
  background: linear-gradient(-135deg,#ffffff 10%, #1296db 5%, #ffffff 15%);
  box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,0.05);
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.MultiFunctional-box image{
  width: 60rpx;
  height: 60rpx;
}
.WaterLocation{
  padding:20rpx;
  background-color: #f7f7f7;
  display: flex;
  flex-direction: column;
  height: 50vh;
}
.WaterLocation-box{
  display: flex;
  align-items: center;
}
.WaterLocation-swiper-box{
  flex: 1;
}
.WaterLocation-item{
  height: 45rpx;
  font-size: 32rpx;
  margin: 0 30rpx 30rpx 0;
  color: #515151;
}
.WaterLocation-item-active{
  height: 45rpx;
  font-size: 32rpx;
  margin: 0 30rpx 30rpx 0;
  font-weight: bold;
  border-bottom: 10rpx solid #1296db;
}
.WaterLocation-swiper{
  height: 100%;
}
.WaterLocation-swiper-item{
  height: 100%;
}
.WaterLocation-scroll-view{
  height: 100%;
}
.WaterLocation-card{
  background-color: white;
  border-radius: 15rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  margin-bottom: 20rpx;
}
.WaterLocation-card-title{
  font-size: 32rpx;
  font-weight: bold;
  flex: 1;
}
.WaterLocation-card-subtitle{
  flex: 2;
  font-size:28rpx;
}
.WaterLocation-card-price-box{
  display: flex;
  justify-content: space-between;
}
.WaterLocation-card-price{
  font-size: 32rpx;
  font-weight: bold;
  color: #d81e06;
}
.WaterLocation-card-price::before{
  content: "￥";
  font-size: 24rpx;
  font-weight: bold;
  color: #d81e06;
}
.WaterLocation-card-price::after{
  content: "L";
  font-size: 28rpx;
  font-weight: bold;
  color: #d81e06;
}
.WaterLocation-card-km{
  display: flex;
  align-items: center;
}
.WaterLocation-card-km>image{
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
.WaterLocation-card-end{
  height: 200rpx;
}