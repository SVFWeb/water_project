.HomePage-top{
  position: relative;
  padding: 100rpx 20rpx 20rpx 20rpx;
}
.HomePage-top-image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}
.HomePageLocation{
  position: relative; 
  height: 60rpx; 
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  z-index: 5;
  margin-bottom: 10rpx; 
}
.BalanceCard{
  position: relative; 
  height: 300rpx;
  padding: 20rpx 20rpx 30rpx 20rpx;
  z-index: 5;
}
.BalanceCard-image{
  position: absolute;
  top: 40rpx;
  right:0;
  width: 300rpx;
  height: 300rpx;
}
.BalanceCard-box{
  display: flex;
  flex-direction: column;
  height: 95%;
  background: linear-gradient(45deg, #1296db, #9ad9fc);
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx 0 rgba(0,0,0,0.05);
}

.BalanceCard-title{
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.925);
}

.BalanceCard-subtitle{
  flex: 2;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.801);
}

.BalanceCard-blance{
  font-size: 40rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 0.925);
}

.BalanceCard-blance::before{
  content: "￥";
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.925);
}
