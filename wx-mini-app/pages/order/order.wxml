<view class="ordersTopBox">
  <view class="orderTop-topBox">
    <text class="{{orderSwiperIndex==0?'orderTop-top-active':'orderTop-top'}}" bind:tap="changeOrderSwiperIndexOne">交易记录▼</text>
    <text class="{{orderSwiperIndex==1?'orderTop-top-active':'orderTop-top'}}" bind:tap="changeOrderSwiperIndexTwo">充值记录▼</text>
  </view>
</view>
<view class="ordersMiddleBox">
  <view class="ordersMiddle-swiper-box">
    <swiper class="ordersMiddle-swiper" current="{{orderSwiperIndex}}" bindchange="onSwiperChange">
      <swiper-item class="ordersMiddle-swiper-item">
        <scroll-view scroll-y="true" class="ordersMiddle-scroll-view">
          <!-- 交易记录卡片 -->
          <view class="ordersMiddle-list-card" wx:for="{{UserTransactionList}}" wx:key="*this">
            <view class="order-card">
              <view class="order-header">
                <text class="order-id">订单号: {{item.transactionId}}</text>
                <text class="order-status completed">{{item.orderStatus}}</text>
              </view>
              <view class="order-info">
                <text class="machine">机器编号：{{item.machineId}}</text>
                <text class="time">{{item.startTime}}</text>
              </view>
              <view class="order-details">
                <text class="detail">用水量: {{item.totalLiters}}升</text>
                <text class="detail">单价: 0.27元/升</text>
                <text class="amount">{{item.finalAmount}}元</text>
              </view>
            </view>
          </view>
          <view class="msgTip" wx:if="{{!UserTransactionList}}">
            <text>{{msgTip}}...</text>
          </view>
        </scroll-view>
      </swiper-item>
      <swiper-item class="ordersMiddle-swiper-item">
        <scroll-view scroll-y="true" class="ordersMiddle-scroll-view">
          <!-- 充值记录卡片 -->
          <view class="ordersMiddle-list-card" wx:for="{{UserRechargeList}}" wx:key="*this">
            <view class="recharge-card">
              <view class="order-header">
                <text class="order-id">充值单号: {{item.recordId}}</text>
                <text class="order-status completed">{{item.status=="success"?'充值成功':'充值失败'}}</text>
              </view>
              <view class="order-info">
                <text class="time">{{item.rechargeTime}}</text>
                <text class="payment">{{item.remark}}</text>
              </view>
              <view class="recharge-details">
                <text class="amount">{{item.amount}}元</text>
                <text class="bonus">赠送0元</text>
              </view>
            </view>
          </view>
          <view class="msgTip" wx:if="{{!UserRechargeList}}">
            <text>{{msgTip}}...</text>
          </view>
        </scroll-view>
      </swiper-item>
    </swiper>
  </view>
</view>