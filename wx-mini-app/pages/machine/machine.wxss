.machineTopBox{
  padding: 100rpx 20rpx 20rpx 20rpx ;
  background: linear-gradient(-180deg, #1296db, #9ad9fc);
}
.machineBack{
  width: 50rpx;
  height: 50rpx;
}
.machineTop-titleBox{
