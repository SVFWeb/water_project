.machineStartIngBox-btn3{
  background: linear-gradient(180deg, #dbb612, #fcf29a);
}
.machineStartIngBox-btn4{
  background: linear-gradient(180deg, #db1212, #fc9a9a);
}

/* 登录弹窗样式 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.login-tip-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.login-tip-text {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}
.btn-cancel, .btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  border-radius: 0;
  font-size: 28rpx;
}
.btn-cancel {
  background: #f8f8f8;
  color: #333;
  border-right: 1rpx solid #f0f0f0;
}
.btn-confirm {
  background: #07c160;
  color: white;
}